{
  "manifest_version": 3,
  "name": "Lichess Auto Analysis",
  "version": "1.0",
  "description": "Automatically requests computer analysis for Lichess games",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://lichess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
